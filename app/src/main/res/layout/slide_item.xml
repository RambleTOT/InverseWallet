<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    app:flow_horizontalAlign="center">

    <ImageView
        android:id="@+id/itemImageWelcome"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/image_welcome_first"/>
    
    <TextView
        android:id="@+id/itemTextTitleWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/color_text_main"
        android:text="@string/text_title_welcome_first"/>

    <TextView
        android:id="@+id/itemTextDescriptionWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/color_text_second"
        android:text="@string/text_description_welcome_first"/>

</LinearLayout>