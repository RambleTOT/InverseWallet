<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PasswordResetActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:layout_marginHorizontal="20dp">

                <ImageButton
                    android:id="@+id/buttonBackResetPassword"
                    android:layout_width="24dp"
                    android:layout_height="17dp"
                    android:background="@drawable/image_button_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:paddingLeft="-24dp"
                    android:textColor="@color/color_text_main"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="@string/text_password_reset"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="56dp">

                <EditText
                    android:id="@+id/editPasswordNewReset"
                    android:layout_width="match_parent"
                    android:minHeight="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginHorizontal="25dp"
                    android:hint="@string/text_password_new"
                    android:textColorHint="@color/color_text_second"
                    android:textColor="@color/color_text_second"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:password="true"
                    android:maxLength="25"
                    android:paddingVertical="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_style_edit_text"
                    tools:ignore="Deprecated" />

                <EditText
                    android:id="@+id/editPasswordConfirmationReset"
                    android:layout_width="match_parent"
                    android:minHeight="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginHorizontal="25dp"
                    android:hint="@string/text_password_confirmation"
                    android:textColorHint="@color/color_text_second"
                    android:textColor="@color/color_text_second"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:password="true"
                    android:maxLength="25"
                    android:paddingVertical="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_style_edit_text"
                    tools:ignore="Deprecated" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="32dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonContinueReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color_main"
                    android:fontFamily="@font/inter_semi_bold"
                    android:padding="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="@string/text_continue"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="16dp"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"
                    android:textAppearance="?attr/textAppearanceBody2"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>