<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="50dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/radius_layout4"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/image_green"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_income"
                                android:textColor="@color/color_plus"
                                android:textSize="14dp"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:id="@+id/menuTextIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₽9000"
                                android:textColor="@color/color_plus"
                                android:textSize="20sp"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_semi_bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/radius_layout4red"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/image_red"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_expens"
                                android:textColor="@color/color_plus"
                                android:textSize="14dp"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_medium"/>

                            <TextView
                                android:id="@+id/menuTextExpence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₽9000"
                                android:textColor="@color/color_plus"
                                android:textSize="20sp"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_semi_bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>